<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message_for_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/why_notification_permission_is_needed"/>

    <TextView
        android:id="@+id/notifications_permission_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/trigger_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trigger_test_notification"/>

</LinearLayout>